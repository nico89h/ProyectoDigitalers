@model IEnumerable<ClaseConPruebaMigraciones.Articulo>

@{
    ViewBag.Title = "Articulos";

}

<h2>Articulos</h2>

<ul>
    <li>@Html.ActionLink("Crear un articulo nuevo", "Create")</li>
    <li>@Html.ActionLink("Todos los comentarios", "ComentarioIndex")</li>
</ul>
    
    


@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cuerpo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentarios)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cuerpo)
                </td>

                <td>
                    @if (!item.Comentarios.Any())
                    {
                        @Html.ActionLink("Agregar comentario", "AnadirComentario", new { id= item.Id});
                    }
                    else
                    {
                        @Html.ActionLink("Comentarios", "listadoComentarios", new { id = item.Id });
                    }
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

}
else
{
    <p>No se encontro ningun articulo</p>

}