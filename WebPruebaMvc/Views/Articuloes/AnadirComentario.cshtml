@model ClaseConPruebaMigraciones.Articulo
@{
    ViewBag.Title = "Añadir Comentario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (ViewBag.Message!=null) { 
        <h1>No se pudo realizar la accion solicitada</h1>
    }
}

<h2>Anadir Comentario a el Articulo: @Model.Name</h2>
<!--Inicio de el agregar comentario para un articulo-->
<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Autor">Autor</label>
        <input type="text" class="form-control" id="Autor" name="Autor" min="10" max="50">
    </div>
    <div class="form-group">
        <label for="Cuerpo">Cuerpo</label>
        <input type="text" class="form-control" id="Cuerpo" name="Cuerpo" min="10" max="50">
    </div>
    <div class="form-group">
        <label for="Fecha">Fecha</label>
        <input type="date" class="form-control" id="Fecha" name="Fecha">
    </div>
    <div class="form-group">
        <label for="ArticuloId">Id del articulo</label>
        <input type="number" class="form-control" id="ArticuloId" value=@Model.Id name="ArticuloId" readonly>
    </div>
